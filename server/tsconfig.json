{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "@/schemas/*": ["schemas/*"],
      "@/schemas": ["schemas"],
      "@/repositories/*": ["repositories/*"],
      "@/services/*": ["services/*"],
      "@/controllers/*": ["controllers/*"],
      "@/models/*": ["models/*"],
      "@/models": ["models"],
      "@/middlewares/*": ["middlewares/*"],
      "@/routes/*": ["routes/*"],
      "@/configs/*": ["configs/*"],
      "@/constants/*": ["constants/*"],
      "@/validations/*": ["validations/*"],
      "@/utils/*": ["utils/*"],
      "@/types/*": ["types/*"],
      "@/types": ["types"],
   }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}